      var socket = io();
      socket.on('display', function(data){
        eval(data);
      });
      function ask(){
        var askString = document.getElementById('ask').value;
        if(askString!=null && askString != ''){
          alert(askString);
          var data  ={}ï¼›
          data.topic = 'ask';
          data.text = askString;
          socket.emit("message",data);
        }
      }
